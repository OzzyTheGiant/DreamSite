---
import { t } from "i18next"
import { type IconDefinition } from "@fortawesome/free-solid-svg-icons"
import { faMagnifyingGlass, faBookOpen, faUsers, faTrash } from "@fortawesome/free-solid-svg-icons"
import { faGlobe, faWifi, faLaptopCode, faFileShield  } from "@fortawesome/free-solid-svg-icons"
import { faBusinessTime } from "@fortawesome/free-solid-svg-icons"
import Layout from '@/layouts/Layout.astro'
import Headline from '@/components/Headline.svelte'
import CallToAction from "@/components/CallToAction.svelte"
import FeatureSection, { createFeatureList } from "@/components/FeatureSection.svelte"
import PricingTable, { type PricingTier } from "@/components/PricingTable.svelte"

const iconList: IconDefinition[] = [
  faMagnifyingGlass,
  faBookOpen,
  faUsers,
  faTrash,
  faGlobe,
  faWifi,
  faLaptopCode,
  faFileShield,
  faBusinessTime
]

const featureList = createFeatureList("home.features.list", iconList, t)

const tiers: PricingTier[] = [
  {
    name: t("home.pricing.tiers.website.title"),
    description: t("home.pricing.tiers.website.description"),
    price: 25,
    unit: t("home.pricing.units.hour"),
    features: [
      t("home.pricing.tiers.website.feature_1"),
      t("home.pricing.tiers.website.feature_2"),
      t("home.pricing.tiers.website.feature_3"),
      t("home.pricing.tiers.website.feature_4"),
      t("home.pricing.tiers.website.feature_5")
    ]
  },
  {
    name: t("home.pricing.tiers.e_commerce.title"),
    description: t("home.pricing.tiers.e_commerce.description"),
    price: 35,
    unit: t("home.pricing.units.hour"),
    features: [
      t("home.pricing.tiers.e_commerce.feature_1"),
      t("home.pricing.tiers.e_commerce.feature_2"),
      t("home.pricing.tiers.e_commerce.feature_3"),
      t("home.pricing.tiers.e_commerce.feature_4"),
      t("home.pricing.tiers.e_commerce.feature_5")
    ]
  },
  {
    name: t("home.pricing.tiers.web_app.title"),
    description: t("home.pricing.tiers.web_app.description"),
    price: 40,
    unit: t("home.pricing.units.hour"),
    features: [
      t("home.pricing.tiers.web_app.feature_1"),
      t("home.pricing.tiers.web_app.feature_2"),
      t("home.pricing.tiers.web_app.feature_3"),
      t("home.pricing.tiers.web_app.feature_4"),
      t("home.pricing.tiers.web_app.feature_5")
    ]
  },
  {
    name: t("home.pricing.tiers.mobile_app.title"),
    description: t("home.pricing.tiers.mobile_app.description"),
    price: 38,
    unit: t("home.pricing.units.hour"),
    features: [
      t("home.pricing.tiers.mobile_app.feature_1"),
      t("home.pricing.tiers.mobile_app.feature_2"),
      t("home.pricing.tiers.mobile_app.feature_3"),
      t("home.pricing.tiers.mobile_app.feature_4"),
      t("home.pricing.tiers.mobile_app.feature_5")
    ]
  },
]
---

<Layout title={""} description={t("home.description")}>
	<Headline
    sectionType="heroVisual"
    image="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png"
    title={t("home.headline.title")}
    description={t("home.headline.description")}
    imageAlt={t("home.headline.image_alt")}
    primaryButtonText={t("home.headline.button_1_text")}
    secondaryButtonText={t("home.headline.button_2_text")}
    primaryButtonLink={t("home.headline.button_1_link")}
    secondaryButtonLink={t("home.headline.button_2_link")}/>

  <FeatureSection
    title={t("home.features.title")}
    description={t("home.features.description")}
    features={featureList}/>

  <PricingTable
    {tiers}
    title={t("home.pricing.title")}
    description={t("home.pricing.description")}/>

  <CallToAction
    type="heading"
    image="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/cta/cta-dashboard-mockup.svg"
    imageDark="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/cta/cta-dashboard-mockup-dark.svg"
    imageAlt="dashboard"
    title={t("call_to_action.title")}
    description={t("call_to_action.description")}
    buttonText={t("call_to_action.button_text")}
    buttonLink={t("call_to_action.button_link")}/>
</Layout>
