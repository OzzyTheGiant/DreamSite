---
import { t } from "i18next"
import { type IconDefinition } from "@fortawesome/free-solid-svg-icons"
import { faMagnifyingGlass, faBookOpen, faUsers, faTrash } from "@fortawesome/free-solid-svg-icons"
import { faGlobe, faWifi, faLaptopCode, faFileShield  } from "@fortawesome/free-solid-svg-icons"
import { faBusinessTime } from "@fortawesome/free-solid-svg-icons"
import Layout from '@/layouts/Layout.astro'
import Headline from '@/components/Headline.svelte'
import CallToAction from "@/components/CallToAction.svelte"
import FeatureSection, { createFeatureList } from "@/components/FeatureSection.svelte"

const iconList: IconDefinition[] = [
  faMagnifyingGlass,
  faBookOpen,
  faUsers,
  faTrash,
  faGlobe,
  faWifi,
  faLaptopCode,
  faFileShield,
  faBusinessTime
]

const featureList = createFeatureList("home.features.list", iconList, t)
---

<Layout title={t("home.title")} description={t("home.description")}>
	<Headline
    sectionType="heroVisual"
    image="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png"
    title={t("home.headline.title")}
    description={t("home.headline.description")}
    imageAlt={t("home.headline.image_alt")}
    primaryButtonText={t("home.headline.button_1_text")}
    secondaryButtonText={t("home.headline.button_2_text")}
    primaryButtonLink={t("home.headline.button_1_link")}
    secondaryButtonLink={t("home.headline.button_2_link")}/>

  <FeatureSection
    title={t("home.features.title")}
    description={t("home.features.description")}
    features={featureList}/>

  <CallToAction
    type="heading"
    image="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/cta/cta-dashboard-mockup.svg"
    imageDark="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/cta/cta-dashboard-mockup-dark.svg"
    imageAlt="dashboard"
    title={t("call_to_action.title")}
    description={t("call_to_action.description")}
    buttonText={t("call_to_action.button_text")}
    buttonLink={t("call_to_action.button_link")}/>
</Layout>
