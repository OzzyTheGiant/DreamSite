---
import { t } from "i18next"
import Layout from '@/layouts/Layout.astro'
import ArticleList, { type Article } from "@/components/ArticleList.svelte"

const articles: Article[] = [
  {
    id: "sample-title",
    title: "Sample Title",
    lead: "Ut cillum fugiat aliqua aliquip sit aute qui. Veniam ipsum qui esse ullamco occaecat nulla ipsum excepteur ipsum. Eiusmod tempor deserunt mollit sint cillum cupidatat.",
    isoDate: "2023-10-01",
    category: "Article",
    author: {
      name: "John Doe"
    }
  }
]
---

<Layout title={t("articles.title") + " - "} description={t("articles.description")}>
  <ArticleList articles={articles}/>
</Layout>
